@using FinalProject.Core.Application.ViewModel.Login;
@model LoginViewModel
@{
    ViewData["Title"] = "Inicio de Sesion";

}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 d-flex justify-content-center align-items-center" style="min-height: 70vh;">
            <div class="col-5">
                <div class="card border-cards">

                    <div class="card-header bg-blue-card-header text-light text-center">
                        <h4>Inicio de sesión</h4>
                    </div>
                    <div class="card-body">
                        @if (Model.HasError)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <p>@Model.Error</p>
                                <button type="button" class=" btn btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        <form class="form-floating mb-3" method="post" asp-controller="Home" asp-action="Index">

                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" asp-for="Usuario" placeholder="Ingrese su nombre de usuario" autocomplete="on">
                                <label for="floatingInput">Nombre de usuario</label>
                                <span asp-validation-for="Usuario" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" asp-for="Contraseña" placeholder="Ingrese su contraseña">
                                <label for="floatingInput">Contraseña</label>
                                <span asp-validation-for="Contraseña" class="text-danger"></span>

                            </div>

                            <div class="d-flex justify-content-center mt-2">
                                <button type="submit" class="btn btn-outline-primary ms-2" style="border-radius:50px; width:420px;">Iniciar Sesión</button>

                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<style>

    .bg-blue-card-header {
        background-color: #D3D9DE;
        color: white;
    }

    .bg-blue {
        background: #B7E1FF;
    }

    .card {
        border: 0.2px solid #D3D9DE;
        border-radius: 4px 4px 10px 10px;
        box-shadow: 8px 8px 16px #6BA2CD;
    }

</style>
